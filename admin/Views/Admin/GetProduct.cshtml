
@{
    ViewBag.Title = "Get Product";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

@section AddJS{
    <script src="~/Content/js/admin/admin.js"></script>

}

<div class="function">
    <button class="add">
        <a href="./add_product.html">Add Product</a>
    </button>

    @using (Html.BeginForm("GetProduct", "Admin", FormMethod.Post, new { id = "form-product" }))
    {

        <select value="brand" name="type" id="type-product">
            <option value="id">ID</option>
            <option value="brand" selected>BRAND</option>
            <option value="name">NAME</option>
            <option value="price">PRICE</option>
        </select>
        <input type="text" name="search" value="Titan" id="search-product">
        <button type="submit" id="product-submit">
            <i class="fas fa-search"></i>
        </button>
    }



</div>
<div class="container-home">
    <div class="menu">
        <ul>
            <li class="menu-item">
                <a href="./index.html">Product</a>
            </li>
            <li class="menu-item">
                <a href="./account.html">Account</a>
            </li>
            <li class="menu-item">
                <a href="./order.html">Order</a>
            </li>
            <li class="menu-item">
                <a href="./add_product.html">Add Product</a>
            </li>
            <li class="menu-item">
                <a href="./login.html">Log Out</a>
            </li>
        </ul>
    </div>
    <div class="content">
        <table id="table-product">
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Price</th>
                <th>Gender</th>
                <th>Quantity Import</th>
                <th>Status</th>
                <th>Action</th>
            </tr>



            @model IEnumerable<WatchShop.Models.Product>

            @foreach (var Item in Model)
            {
                <tr id="tr-product__@Item.Id">
                    <td>@Item.Id</td>
                    <td>@Item.Name</td>
                    <td>$@Item.Price</td>
                    <td>@Item.Gender</td>
                    <td>@Item.Import</td>
                    <td>Stocking</td>
                    <td>
                        <ul>
                            <li class="action-item watch-product">
                                <a href="/Admin/ViewProduct?id=@Item.Id">
                                    <i class="far fa-eye"></i>
                                </a>
                            </li>
                            <li class="action-item remove-product" data-id="@Item.Id">
                                <a>
                                    <i class="fas fa-times"></i>
                                </a>
                            </li>
                            <li class="action-item edit-product">
                                <a href="/Admin/EditProduct?id=@Item.Id">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </li>
                        </ul>

                    </td>
                </tr>
            }


        </table>
    </div>
</div>



