<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- font family -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700;900&family=Source+Sans+Pro:wght@900&display=swap" rel="stylesheet" />


    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>




    <!-- CSS  -->
    <link rel="stylesheet" href="~/Content/css/admin/base.css">
    <link rel="stylesheet" href="~/Content/css/admin/header.css">
    <link rel="stylesheet" href="~/Content/css/admin/index.css">
    @if (IsSectionDefined("AddCSS"))
    {
        @RenderSection("AddCSS", required: false)
    }

</head>
<body>
    <!--HEADER-->

    <header>
        <div class="logo">
            <a href="./index.html">
                <img src="@Url.Content("/Content/image/admin/logo.png")" alt="">
            </a>
        </div>
        <div class="user">
            <img src="@Url.Content("/Content/image/admin/avatar/a1.png")" alt="">
            <p class="username">minhchanh</p>
        </div>
    </header>
    <!--HEADER-->
    <!-- BREADCRUMB START -->


    @RenderBody()

    <!-- FOOTER START  -->
    <!-- FOOTER END -->
    @if (IsSectionDefined("AddJS"))
    {
        @RenderSection("AddJS", required: false)
    }






</body>
</html>